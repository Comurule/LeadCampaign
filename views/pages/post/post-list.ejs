 <div class="col-sm-8">    
        <div class="">
            <ol>
            <% posts.forEach(function(post) { %>
                    <li>
                        <h4><a href="/main/post/<%= post.id %>"><%= post.post_title %></a></h4>
                        <p>The main body of the post <%= post.post_body %> <br/>
                        <b>Posted by User: </b> <%= post.User.first_name %> <%= post.User.last_name %> <br/>
                        <b>User was in this Department: </b> <%= post.Department.department_name %> (This is the Department of User when Post was first created)  <br/>
                        <b>User was in this Current Business: </b> <%= post.CurrentBusiness.current_business_name %><br/>
                         <!--Category: DISPLAY CATEGORY HERE -->
                         <b>Inside Categories: </b> <% post.categories.forEach(function(category) { %>  <a href="/main/category/<%= category.id %>/"> <%= category.category_name %> </a>  <% }); %>
                        </p>
                         <a href="/main/post/<%= post.id %>/update">Edit  Post</a> | <a href="/main/post/<%= post.id %>/delete">Delete Post</a>
                    </li>
                <br/>
            <% }); %>
            </ol>
        </div>
        <a href="/main/post/create"> CLICK HERE TO CREATE POST</a>
    </div>